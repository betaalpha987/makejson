<core:View displayBlock="true"
    height="100%"
	controllerName="sap.ui.demo.fiori2.controller.Master"
	xmlns="sap.m"
	xmlns:u="sap.ui.unified"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core">

	<f:DynamicPage id="dynamicPageId" toggleHeaderOnTitleClick="false">
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="Entity Sets"/>
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>

		<!-- DynamicPage Content -->
		<f:content>
			<VBox fitContainer="true">

			<u:FileUploader 
					uploadUrl=""
					fileType="json,xml"
					buttonText="Upload XML or JSON"  
					maximumFileSize="1"
					buttonOnly="true"
					icon="sap-icon://upload"
					change="onUploadChange"/>


				<Table id="entitySetsTable"
						visible="{/ESListTableVisible}"
						items="{
								path: '/EntitySets',
								sorter: {
									path: 'name'
								}
							}"
						class="sapFDynamicPageAlignContent"
						width="auto">
					<columns>
						<Column>
							<Text text="Name" />
						</Column>
					</columns>
					<items>
						<ColumnListItem type="Navigation" press="onListItemPress">
							<cells>
								<ObjectIdentifier title="{name}" />
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</VBox>
		</f:content>

	</f:DynamicPage>
</core:View>
